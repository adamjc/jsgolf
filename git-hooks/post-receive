# Copy files across to /var/jsgolf
# Check that /var/jsgolf is a directory, if it is, do nothing
# If it is not, clone repo
if [ -d /var/jsgolf ]; then
  sudo mkdir -p /var/jsgolf
  sudo git clone /git /var/jsgolf
fi

cd /var/jsgolf
git pull --rebase
sudo cp git-hooks/post-recieve /git/hooks/

sudo apt install -y npm
sudo npm install -g npm@latest
sudo npm install
npx gulp
npm start

# Copy NGINX config across
# Restart NGINX
